@using Couponat.Models
@model PagedList.IPagedList<Couponat.Models.Coupon>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="content1" class="table-layout animated fadeIn">
    <div class="tray tray-center">
        <div class="panel" style="margin: 0px">
            <div class="panel-body ph15">
                @Html.ActionLink("Create New", "Create", "Coupons", new { @class = "btn btn-lg btn-primary btn-block" })
            </div>
        </div>
    </div>
</div>
    
<section id="content" class="table-layout animated fadeIn">

    <!-- begin: .tray-right -->
    <!-- end: .tray-right -->
    <!-- begin: .tray-center -->
    <div class="tray tray-center">

        <!-- Search Results Panel  -->
        <div class="panel">
            @using (Html.BeginForm("Index", "Coupons", FormMethod.Get))
            {

                <div class="panel-menu">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="input-group input-hero input-hero-sm">
                                <span class="input-group-addon">
                                    <i class="fa fa-search"></i>
                                </span>
                                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Enter search terms.." })

                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-lg btn-primary btn-block" style="height: 53px">Search</button>
                        </div>
                    </div>
                </div>
            }
            <div class="panel-body ph20">
                <div class="tab-content">



                    <!-- User Search Pane -->
                    <div id="users">
                        <div class="table-responsive mhn20 mvn15">
                            <table class="table admin-form theme-warning fs13">
                                <thead>
                                <tr class="bg-light">
                                    <th id="Name">
                                        Logo
                                    </th>
                                    <th >
                                        <span class="glyphicon glyphicon-sort-by-attributes"></span>
                                        @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                                    </th>
                                    <th id="NameAr">
                                        <span class="glyphicon glyphicon-sort-by-attributes"></span>
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().NameAr)
                                    </th>
                                    <th id="Offer">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().Offer)
                                    </th>
                                    <th id="OfferAr">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().OfferAr)
                                    </th>
                                    <th id="CouponCode">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().CouponCode)
                                    </th>

                                    <th id="Website">
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().Website)
                                    </th>

                                    <th id="CreationDate">
                                        <span class="glyphicon glyphicon-sort-by-attributes"></span>
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().CreationDate)
                                    </th>
                                    <th id="EndDate">
                                        <span class="glyphicon glyphicon-sort-by-attributes"></span>
                                        @Html.DisplayNameFor(model => model.FirstOrDefault().EndDate)
                                    </th>

                                    <th id="CouponCount">
                                        <span class="glyphicon glyphicon-sort-by-attributes"></span>
                                        Coupon Click Count
                                    </th>

                                    <th id="WebsiteCount">
                                        <span class="glyphicon glyphicon-sort-by-attributes"></span>
                                        Website Click Count
                                    </th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="w50">
                                            <img class="img-responsive" src='/Images/@item.Logo' title="user">
                                        </td>
                                        <td class="">@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td class="">@Html.DisplayFor(modelItem => item.NameAr)</td>
                                        <td class="">@Html.DisplayFor(model => item.Offer)</td>
                                        <td class="">@Html.DisplayFor(modelItem => item.OfferAr)</td>
                                        <td class="">@Html.DisplayFor(modelItem => item.CouponCode)</td>
                                        <td class="">@Html.DisplayFor(modelItem => item.Website)</td>
                                        <td class="">@Html.DisplayFor(modelItem => item.CreationDate)</td>
                                        <td class="">@Html.DisplayFor(modelItem => item.EndDate)</td>
                                        @{
                                            int CouponCodeCount = item.CouponHits.Where(h => h.HitType == HitTypes.CouponCode).Count();
                                            int CouponWebsiteCount = item.CouponHits.Where(h => h.HitType == HitTypes.CouponWebsite).Count();
                                        }
                                        <td class="">@Html.DisplayFor(modelItem => CouponCodeCount) </td>
                                        <td class="">@Html.DisplayFor(modelItem => CouponWebsiteCount) </td>

                                        <td class="text-right">
                                            <div class="btn-group text-right">
                                                <button type="button" class="btn btn-success br2 btn-xs fs12 dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                    Options
                                                    <span class="caret ml5"></span>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-right dropdown-menu dropdown-menu-right-right" role="menu">
                                                    <li>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                                    </li>
                                                    <li>
                                                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                                                    </li>

                                                    <li>
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }


                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
          
            <div class="panel-footer clearfix">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("Index", 
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>

    </div>
    <!-- end: .tray-center -->


</section>



